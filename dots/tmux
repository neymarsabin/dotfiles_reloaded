# Enable UTF-8
setw -g utf8 on
set-option -g status-utf8 on
set-option -g status on
# Scrollback/History limit
set -g history-limit 2048

# Index Start
set -g base-index 1

# Mouse
set-option -g mouse-select-pane on

# Force reload of config file
bind r source-file ~/.tmux.conf ; display-message "Reloaded:"



### Theme
###########################################################################

# Statusbar Color Palatte
set-option -g status-justify left
set-option -g status-bg black
set-option -g status-fg white
set-option -g status-left-length 150
set-option -g status-right-length 160

# Pane Border Color Palette
set-option -g pane-active-border-fg green
set-option -g pane-active-border-bg black
set-option -g pane-border-fg white
set-option -g pane-border-bg black

# Message Color Palette
set-option -g message-fg black
set-option -g message-bg green

# Window Status Color Palette
setw -g window-status-bg black
setw -g window-status-current-fg green
setw -g window-status-bell-attr default
setw -g window-status-bell-fg red
setw -g window-status-activity-attr default
setw -g window-status-activity-fg yellow


### UI
###########################################################################

# Notification
setw -g monitor-activity on
set -g visual-activity on
set-option -g bell-action any
set-option -g visual-bell off

# Automatically set window titles
set-option -g set-titles on
set-option -g set-titles-string '#H:#S.#I.#P #W #T' # window number,program name,active (or not)

# Statusbar sssAdjustments
#set -g status-left "#[fg=red] #H#[fg=green]:#[fg=white]#S#[fg=green] |#[default]" 
set -g status-interval 4
#set -g status-left "#(~/.battery/tmux-battery/Battery/battery -t)"
#set -g status-right "" 

# navigate through windows 
 bind -n C-u  previous-window
 bind -n C-o next-window
 bind-key -n C-t new-window
 bind-key -n C-w kill-window

# set status-keys as emacs
set-option -g status-keys "emacs"
set-option -g default-terminal "screen-256color"

# plugin manager and plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @themepack 'powerline/block/cyan'

# to start tmux plugin manager 
run '~/.tmux/plugins/tpm/tpm'
# sourcing the tmux theme
source-file "${HOME}/.tmux-themepack/powerline/double/green.tmuxtheme"

# synchronize panes
bind e set -g synchronize-panes

# switching between panes made easy
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# keeping window name fixed
set-option -g allow-rename off
